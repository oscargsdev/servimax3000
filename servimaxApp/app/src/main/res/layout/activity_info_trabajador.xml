<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/pad_registro_login">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".InfoTrabajador">

        <ImageView
            android:id="@+id/fotoTrabajadorInfo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ppfblank" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/fotoTrabajadorInfo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/fotoTrabajadorInfo"
            app:layout_constraintTop_toTopOf="parent"
            >

            <TextView
                android:id="@+id/calificacionInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:fontFamily="@font/abeezee"
                android:text="@string/calificacion_plantilla"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2"

                android:textSize="40sp" />

            <ImageView
                android:id="@+id/estrellaInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                app:srcCompat="@android:drawable/star_big_on" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:orientation="vertical"
            android:paddingTop="64dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fotoTrabajadorInfo">

            <TextView
                android:id="@+id/etiquetaNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abeezee"
                android:text="Nombre"

                android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/nombreInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abeezee"
                android:text="@string/juan_perez"
                android:textAppearance="@style/TextAppearance.AppCompat.Display3"

                android:textSize="30sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="32dp" />

            <TextView
                android:id="@+id/etiquetaOficio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abeezee"
                android:text="Oficio"

                android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/oficioInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abeezee"
                android:text="Carpintero"
                android:textAppearance="@style/TextAppearance.AppCompat.Display3"

                android:textSize="30sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="32dp" />

            <TextView
                android:id="@+id/telefonoEtiqueta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abeezee"
                android:text="Contacto"

                android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

<!--                <TextView-->
<!--                    android:id="@+id/telefonoInfo"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:fontFamily="@font/abeezee"-->
<!--                    android:text="3315879701"-->

<!--                    android:textAppearance="@style/TextAppearance.AppCompat.Display3"-->
<!--                    android:textSize="30sp" />-->

<!--                <Space-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_weight="1" />-->

                <Button
                    android:id="@+id/llamarButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/abeezee"
                    android:onClick="llamarTrabajador"
                    android:text="Enviar mensaje" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="32dp" />

            <TextView
                android:id="@+id/precioEtiqueta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abeezee"
                android:text="Precio del servicio"

                android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/precioInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abeezee"
                android:text="$1500/hr"
                android:textAppearance="@style/TextAppearance.AppCompat.Display3"

                android:textSize="30sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="32dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Califica a este trabajador"
                android:fontFamily="@font/abeezee"
                android:textAppearance="@style/TextAppearance.AppCompat.Display3"

                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">




                <Button
                    android:id="@+id/estrella1"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1"
                    android:textAlignment="center"
                    android:fontFamily="@font/abeezee"/>

                <Space
                    android:layout_width="5dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/estrella2"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2"
                    android:textAlignment="center"
                    android:fontFamily="@font/abeezee"/>

                <Space
                    android:layout_width="5dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center" />

                <Button
                    android:id="@+id/estrella3"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="3"
                    android:textAlignment="center"
                    android:fontFamily="@font/abeezee"/>

                <Space
                    android:layout_width="5dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/estrella4"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="4"
                    android:textAlignment="center"
                    android:fontFamily="@font/abeezee"/>

                <Space
                    android:layout_width="5dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/estrella5"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="5"
                    android:textAlignment="center"
                    android:fontFamily="@font/abeezee"/>



            </LinearLayout>

            <!--            <Button-->
            <!--                android:id="@+id/solicitudBoton"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:text="Enviar solicitud de servicio" />-->


            <Space
                android:id="@+id/space1"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                tools:layout_editor_absoluteX="99dp"
                tools:layout_editor_absoluteY="711dp" />

            <EditText
                android:id="@+id/etOpinion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Escribe una opinion"
                android:inputType="textMultiLine"
                android:fontFamily="@font/abeezee"/>

            <Space
                android:id="@+id/space2"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                tools:layout_editor_absoluteX="99dp"
                tools:layout_editor_absoluteY="711dp" />

            <Button
                android:id="@+id/btnOpinion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="enviaOpinion"
                android:text="Enviar opinion"
                android:fontFamily="@font/abeezee"/>

            <Button
                android:id="@+id/borrarCali"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="borrarCalificacion"
                android:text="Borrar calificacion"
                tools:layout_editor_absoluteX="83dp"
                tools:layout_editor_absoluteY="165dp"
                android:fontFamily="@font/abeezee"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Opiniones"
                android:fontFamily="@font/abeezee"
                android:textAppearance="@style/TextAppearance.AppCompat.Display3"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerOpiniones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
