<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/fotoTrabajador"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"

            app:srcCompat="@drawable/trabajador" />

        <TextView
            android:id="@+id/nombreTrabajador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/fotoTrabajador"
            android:padding="8dp"
            android:text="@string/juan_perez"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/estrella"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/nombreTrabajador"
            android:layout_toEndOf="@id/fotoTrabajador"
            app:srcCompat="@android:drawable/btn_star_big_on" />

        <TextView
            android:id="@+id/calificacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nombreTrabajador"
            android:layout_toEndOf="@id/estrella"
            android:text="@string/calificacion_plantilla"
            android:textSize="30sp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>