<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    app:cardElevation="3dp"
    app:cardCornerRadius="20dp"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@color/white"
    app:cardMaxElevation="12dp"

    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="false">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/fotoTrabajador"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"

            app:srcCompat="@drawable/trabajador" />

        <TextView
            android:id="@+id/nombreTrabajador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/fotoTrabajador"

            android:fontFamily="sans-serif-thin"
            android:text="@string/juan_perez"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="30sp"
            android:paddingStart="10dp"/>

        <ImageView
            android:id="@+id/estrella"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/nombreTrabajador"
            android:layout_toEndOf="@id/fotoTrabajador"
            app:srcCompat="@android:drawable/btn_star_big_on" />

        <TextView
            android:id="@+id/calificacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nombreTrabajador"
            android:layout_toEndOf="@id/estrella"
            android:fontFamily="sans-serif-thin"
            android:text="@string/calificacion_plantilla"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="30sp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>