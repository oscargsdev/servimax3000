        <TextView
            android:id="@+id/nombreMsg"
            style="@android:style/Widget.DeviceDefault.Light.TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginRight="12dp"
            android:fontFamily="@font/abeezee"
            android:paddingStart="5dp"
            android:text="Oscar Garcia"
            android:textSize="10sp"
            android:textStyle="italic" />


        <TextView
            android:id="@+id/cuerpoMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nombreMsg"
            android:layout_marginRight="12dp"
            android:fontFamily="@font/abeezee"
            android:paddingStart="5dp"
            android:paddingTop="5dp"
            android:text="Este trabajador hizo un muy buen trabajo, llego algo tarde pero en general lo recomendaria"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/mTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cuerpoMsg"
            android:layout_marginRight="12dp"
            android:fontFamily="@font/abeezee"
            android:paddingStart="5dp"
            android:paddingTop="5dp"
            android:text="timestamp"
            android:textSize="12sp" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>